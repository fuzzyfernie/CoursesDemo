@model WebApplicationDemo.Models.viewModelStudentCourse


@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditCourse</title>
</head>
<body>

    <center>

        <h1>Courses Available to Pick</h1>
        <table>
            <tr>


                <th>Class Name</th>
                <th>Class Time</th>
            </tr>
            @foreach (var student in Model.Courses.Courses)
