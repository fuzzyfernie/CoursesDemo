        <h1>Pick Your Courses</h1>
        @*<form asp-action="UpdateCourse" method="post">*@
        <form method="post">
            <p>Please enter your choices.</p>
            <label asp-for="AddedCourse.ClassID">Select Your Courses</label>

            <select asp-for="AddedCourse.ClassID" asp-items="@(new SelectList(@Model.Courses.Courses,"ClassID","ClassName"))"></select>
            <input asp-for="AddedCourse.UID" type="hidden" />
            <br />
            <br />
           
            <button type="submit">Add Class</button>
        </form>

    </center>

    <h1>Courses Selected Classes</h1>
        <table>
            <tr>


                <th>Class Name</th>
                <th>Class Time</th>
            </tr>
            @foreach (var student in Model.SelectedCourses.Courses)
            {
                <tr>

                    <td>@Model.ClassName</td>
                    <td>@Model.ClassTime.ToShortTimeString()</td>
                </tr>
            }
        </table>
       







</body>
</html>

